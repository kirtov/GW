<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityName"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/condition"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin32"
        android:layout_gravity="center"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tempr"
            android:textSize="29sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/curImage"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="4" android:orientation="vertical"
        android:id="@+id/lin23">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/curTime"
            android:layout_gravity="center_horizontal|left"
            android:textSize="21sp" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView2"
            android:layout_gravity="center|top"
             />
    </LinearLayout>

    <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/horizontalScrollView" android:layout_weight="1.5"
        android:layout_gravity="bottom">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_weight="1.5" android:orientation="horizontal"
            android:gravity="bottom">
            <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/l1"
                    android:layout_width="120dp"
                    android:background="@drawable/day"
                    android:layout_height="120dp" android:layout_weight="1"
                android:onClick="on1Click">

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l1_t1" android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                    android:textSize="20sp" />

                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/l1_i1" android:layout_weight="6"
                    android:layout_centerInParent="true" />

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l1_t2" android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold" android:layout_weight="1" android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                    android:textSize="20sp" />
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="120dp"
                    android:id="@+id/l2"
                    android:background="@drawable/day"
                    android:layout_height="120dp" android:layout_weight="1"
                android:onClick="on2Click">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l2_t1" android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                    android:textSize="20sp" />
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/l2_i1" android:layout_weight="6"
                    android:layout_centerInParent="true" />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l2_t2" android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold" android:layout_weight="1" android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                    android:textSize="20sp" />
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="120dp"
                    android:id="@+id/l3"
                    android:background="@drawable/day"
                    android:layout_height="120dp" android:layout_weight="1"
                android:onClick="on3Click">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l3_t1" android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                    android:textSize="20sp" />
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/l3_i1" android:layout_weight="6" android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true" />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l3_t2" android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold" android:layout_weight="1" android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                    android:textSize="20sp" />
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="120dp"
                    android:id="@+id/l4"
                    android:background="@drawable/day"
                    android:layout_height="120dp" android:layout_weight="1"
                android:onClick="on4Click">
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l4_t1" android:gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                    android:textSize="20sp" />
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/l4_i1" android:layout_weight="6"
                    android:layout_centerInParent="true" />
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                    android:id="@+id/l4_t2" android:gravity="center_vertical|center_horizontal"
                        android:textStyle="bold" android:layout_weight="1" android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                    android:textSize="20sp" />
            </RelativeLayout>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout><!-- From: file:/C:/Users/kk1/Desktop/lesson10/app/src/main/res/layout/weather.xml -->